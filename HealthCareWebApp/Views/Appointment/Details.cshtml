@model HealthCareWebApp.Models.Appointment

<h2>Appointment Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Appointment Date
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentDate
        </dd>
        <dt class="col-sm-2">
            Doctor Name
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorName
        </dd>
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class="col-sm-10">
            @Model.Patient.Name
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
