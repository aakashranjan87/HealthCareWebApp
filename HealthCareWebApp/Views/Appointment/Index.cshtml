@model IEnumerable<HealthCareWebApp.Models.Appointment>

<h2>Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Appointment Date</th>
            <th>Doctor Name</th>
            <th>Patient Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.DoctorName</td>
                <td>@appointment.Patient.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@appointment.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@appointment.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Appointment</a>

